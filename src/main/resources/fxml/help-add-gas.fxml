<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Text layoutX="20.0" layoutY="40.0" text="ADD GAS HELP" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Text layoutX="20.0" layoutY="70.0" text="This page allows you to log gas data for a selected building." />

        <Text layoutX="20.0" layoutY="100.0" text="STEPS:" style="-fx-font-weight: bold;" />
        <Text layoutX="40.0" layoutY="125.0" text="1. Select a building." />
        <Text layoutX="40.0" layoutY="145.0" text="2. Enter billing period (from/to), meter read, and charges." />
        <Text layoutX="40.0" layoutY="165.0" text="3. Click 'Add' to store the gas entry." />

        <Text layoutX="20.0" layoutY="200.0" text="EXAMPLE:" style="-fx-font-style: italic;" />
        <Text layoutX="40.0" layoutY="225.0" text="From: 01/01/2024    To: 01/31/2024" />
        <Text layoutX="40.0" layoutY="245.0" text="Meter Read: 8376    Billed CCF: 105    Charges: $215.50" />

        <Text layoutX="20.0" layoutY="280.0" text="CSV OPTIONS:" style="-fx-font-weight: bold;" />
        <Text layoutX="40.0" layoutY="305.0" text="• Click 'Download Template' to get a formatted CSV file." />
        <Text layoutX="40.0" layoutY="325.0" text="• Click 'Upload CSV' to import gas data for multiple buildings." />
        <Text layoutX="40.0" layoutY="345.0" text="• Ensure all required columns (building, dates, charges) are filled." />
    </children>
</AnchorPane>
